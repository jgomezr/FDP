<?xml version="1.0" encoding="utf-8"?>

<manifest xmlns:android="http://schemas.android.com/apk/res/android"
	package="org.grameenfoundation.fdp"
	android:versionCode="1"
	android:versionName="1.4"
	android:installLocation="internalOnly">

    <uses-sdk android:minSdkVersion="16"
        android:targetSdkVersion="23" />

	<uses-permission android:name="android.permission.WRITE_SYNC_SETTINGS" />
    <uses-permission android:name="org.grameenfoundation.fdp.C2D_MESSAGE" />
    <uses-permission android:name="android.permission.READ_SYNC_SETTINGS" />
    <uses-permission android:name="android.permission.WRITE_SYNC_SETTINGS" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>
    <uses-permission android:name="android.permission.ACCESS_LOCATION_EXTRA_COMMANDS"/>
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION"/>
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-feature android:name="android.hardware.camera"
        android:required="true" />

	<application android:icon="@drawable/grameen"
	    android:label="@string/app_name"
		android:name=".fdpApp"
		android:manageSpaceActivity="com.salesforce.androidsdk.ui.ManageSpaceActivity">

        <provider
            android:name="android.support.v4.content.FileProvider"
            android:authorities="com.example.android.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths"></meta-data>
        </provider>

		<!-- Launcher screen -->
		<activity android:name=".MainActivity"
		    android:label="@string/app_name"
			android:theme="@style/SalesforceSDK.ActionBarTheme">
			<intent-filter>
				<action android:name="android.intent.action.MAIN" />
				<category android:name="android.intent.category.LAUNCHER" />
			</intent-filter>
		</activity>

		<!-- Detail screen -->
		<activity android:name="org.grameenfoundation.fdp.ui.DetailActivity"
            android:parentActivityName="org.grameenfoundation.fdp.MainActivity"
			android:configChanges="orientation|screenSize"
			android:theme="@style/SalesforceSDK.ActionBarTheme"
			android:windowSoftInputMode="stateHidden">
			<intent-filter>
				<action android:name="android.intent.action.DETAIL" />
				<category android:name="android.intent.category.DEFAULT" />
			</intent-filter>
		</activity>

		<!-- Plot screen -->
		<activity android:name="org.grameenfoundation.fdp.ui.plotActivity"
            android:parentActivityName="org.grameenfoundation.fdp.ui.DetailActivity"
			android:configChanges="orientation|screenSize"
			android:theme="@style/SalesforceSDK.ActionBarTheme"
			android:windowSoftInputMode="stateHidden">
            <intent-filter>
                <action android:name="android.intent.action.PLOT" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
		</activity>

		<!-- fdp screen -->
		<activity android:name="org.grameenfoundation.fdp.ui.fdpActivity"
            android:parentActivityName="org.grameenfoundation.fdp.ui.plotActivity"
			android:configChanges="orientation|screenSize"
			android:theme="@style/SalesforceSDK.ActionBarTheme">
			<intent-filter>
				<action android:name="android.intent.action.FDP" />
				<category android:name="android.intent.category.DEFAULT" />
			</intent-filter>
		</activity>

		<!-- Year detail screen -->
		<activity android:name="org.grameenfoundation.fdp.ui.YearDetailActivity"
			android:configChanges="orientation|screenSize"
            android:parentActivityName="org.grameenfoundation.fdp.ui.fdpActivity"
			android:theme="@style/SalesforceSDK.ActionBarTheme">
            <intent-filter>
                <action android:name="android.intent.action.DETAIL" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
		</activity>

		<!-- Farmer sync service -->
		<service android:name="org.grameenfoundation.fdp.sync.ContactSyncService"
			android:exported="true"
			android:process=":sync">
			<intent-filter>
				<action android:name="android.content.SyncAdapter"/>
			</intent-filter>
			<meta-data android:name="android.content.SyncAdapter"
				android:resource="@xml/farmer_sync_adapter" />
		</service>

		<!-- Farmer data provider -->
		<!-- ATTENTION: This was auto-generated to add Google Play services to your project for
     App Indexing.  See https://g.co/AppIndexing/AndroidStudio for more information. -->
		<meta-data
			android:name="com.google.android.gms.version"
			android:value="@integer/google_play_services_version" />
	</application>



    <!--
        GCM permission to ensure that only this application can
        receive the messages and registration result. This must be of
        the format <app-package-name>.C2D_MESSAGE for it to work.
    -->
    <permission android:name="org.grameenfoundation.fdp.C2D_MESSAGE"
		android:protectionLevel="signature" />


</manifest>
