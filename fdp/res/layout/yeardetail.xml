                    android:layout_margin="1dp"
                    android:background="#fff"
                    style="@style/FarmerDetail.ParentView.TextView" />
            </LinearLayout>

                <fragment
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/fgPlot1"
                    android:name="org.grameenfoundation.fdp.ui.yearDelayFragment"/>

                <fragment
